<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.kpstv.imageloaderview.ImageLoaderView
            android:id="@+id/imageloaderview1"
            style="@style/ImageLoaderTheme_shimmer"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.kpstv.imageloaderview.ImageLoaderView
            android:id="@+id/imageloaderview2"
            style="@style/ImageLoaderTheme_shimmer"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/imageloaderview3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageloaderview1" />

        <com.kpstv.imageloaderview.ImageLoaderView
            android:id="@+id/imageloaderview3"
            style="@style/ImageLoaderTheme_shimmer"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageloaderview2"
            app:layout_constraintTop_toBottomOf="@id/imageloaderview1" />

        <com.kpstv.imageloaderview.ImageLoaderView
            android:id="@+id/imageloaderview4"
            style="@style/ImageLoaderTheme_overlayTint"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageloaderview3" />

        <com.kpstv.imageloaderview.ImageLoaderView
            android:id="@+id/imageloaderview5"
            style="@style/ImageLoaderTheme_overlayTint"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageloaderview6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageloaderview4" />

        <com.kpstv.imageloaderview.ImageLoaderView
            android:id="@+id/imageloaderview6"
            style="@style/ImageLoaderTheme_overlayTint"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageloaderview5"
            app:layout_constraintTop_toBottomOf="@id/imageloaderview4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>